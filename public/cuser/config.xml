<?xml version="1.0" encoding="utf-8" ?>
<cu3er>
    <settings>
		<general slide_panel_width="600" slide_panel_height="400" />
        <auto_play> 
            <defaults symbol="circular" time="5" /> 
            <tweenIn x="580" y="20" width="35" height="35" tint="0x000000" alpha = "0.9" />
        </auto_play>
        <description>
            <defaults 
            round_corners="10, 0, 10, 0" 
            heading_font="Verdana"
            heading_text_size="14"
            heading_text_color="0xFFFFFF"			
            heading_text_margin="5, 0, 0, 10"	
